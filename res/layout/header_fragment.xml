<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_fragment"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="30dp"
	android:gravity="center" 
	>
    	    
    <ImageView android:id="@+id/bubble_home"
		android:contentDescription="@drawable/bubble_home"
		android:src="@drawable/bubble_home"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scaleType="fitCenter"
		/>
    
    <ImageView android:id="@+id/bubble_question_male"
		android:contentDescription="@drawable/bubble_question_male"
		android:src="@drawable/bubble_question_male"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		/>
    
    <ImageView android:id="@+id/bubble_question_female"
		android:contentDescription="@drawable/bubble_question_female"
		android:src="@drawable/bubble_question_female"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		/>

</RelativeLayout>